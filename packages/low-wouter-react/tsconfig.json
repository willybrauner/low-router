{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "strict": false,
    "moduleResolution": "node",
    "allowJs": true
  },
  "types": ["node", "src/router.d.ts"],
  "paths": {
    "@wbe/low-router-preact": ["../low-router-preact/src/index.ts"],
    "preact": ["./node_modules/react"],
    "preact/hooks": ["./node_modules/react"],
    "preact/compat": ["./node_modules/react"]
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
