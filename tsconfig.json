{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "outDir": "dist",
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "types": ["vite/client"],
    "lib": ["esnext", "dom"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["packages", "*.d.ts"]
}
